<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Zeemlin.MAUI.MainPage">

    

    <Grid>
        <Image Source="C:\Users\mahka\Pictures\Saved Pictures\fon.jpg"/>
        <StackLayout
        VerticalOptions="Center"
        Padding="30"
        Spacing="20">

        <Label
        Text="Welcome to Zeemlin!"
        Style="{StaticResource Headline}"
        SemanticProperties.HeadingLevel="Level1" />

        <StackLayout
        HorizontalOptions="Center"
        Spacing="10">
            <Button
            Text="Teacher"
            Command="{Binding SetRoleCommand}"
            CommandParameter="Teacher"
            HorizontalOptions="Fill" />
            <Button
            Text="Student"
            Command="{Binding SetRoleCommand}"
            CommandParameter="Student"
            HorizontalOptions="Fill" />
            <Button
            Text="Parent"
            Command="{Binding SetRoleCommand}"
            CommandParameter="Parent"
            HorizontalOptions="Fill" />
        </StackLayout>

        </StackLayout>
    </Grid>

</ContentPage>
